{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version", "stage", "task"],
  "properties": {
    "version": { "const": 1 },
    "stage": { "enum": ["intent", "shape", "decompose", "planning", "executing", "review", "complete", "cancelled"] },
    "task": { "type": "string" },
    "spec_score": { "type": "integer", "minimum": 0, "maximum": 10 },
    "fit_score": { "type": "integer", "minimum": 0, "maximum": 75 },
    "shape_chosen": { "enum": ["colleague", "tool-review", "tool"] },
    "started_at": { "type": "string", "format": "date-time" },
    "last_updated": { "type": "string", "format": "date-time" },
    "exit_signal": { "type": "boolean" },
    "recall_surfaced": { "type": "array", "items": { "type": "string" } },
    "reviews": { "type": "object" },
    "team": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "team_name": { "type": "string" },
        "team_score": { "type": "integer", "minimum": 0 },
        "teammates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "role"],
            "properties": {
              "name": { "type": "string" },
              "agentId": { "type": "string" },
              "role": { "enum": ["implementation", "testing", "review", "debugging", "documentation"] },
              "assigned_tasks": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "mode": { "enum": ["delegate", "default"] },
        "shutdown_status": { "enum": ["active", "shutting_down", "completed"] }
      }
    },
    "plan": {
      "type": "object",
      "properties": {
        "file_path": { "type": "string" },
        "approved": { "type": "boolean", "default": false },
        "spec_extracted": { "type": "string" },
        "files_to_modify": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
