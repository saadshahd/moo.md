{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": { "const": 1 },
    "loop_context": {
      "type": "object",
      "properties": {
        "spec": { "type": "string", "description": "Current spec/task summary" },
        "wave_number": { "type": "integer", "minimum": 1, "description": "Current wave (1-indexed)" },
        "task_count": { "type": "integer", "minimum": 0, "description": "Tasks in this wave" },
        "completed_count": { "type": "integer", "minimum": 0, "description": "Tasks completed so far" },
        "shape_chosen": { "enum": ["colleague", "tool-review", "tool"], "description": "Shape determined during intent clarification" },
        "team_enabled": { "type": "boolean", "default": false, "description": "Agent teams mode active" },
        "team_name": { "type": "string", "description": "Team name if teams enabled" },
        "current_phase": { "enum": ["decompose", "executing", "review", "complete"], "description": "Current phase of loop" },
        "blocked_on": { "type": "array", "items": { "type": "string" }, "description": "Task IDs currently blocking progress" },
        "timestamp": { "type": "string", "format": "date-time", "description": "When context was last updated" }
      }
    }
  },
  "additionalProperties": false
}
