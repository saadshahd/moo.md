{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["reasoning", "behaviors", "verdict"],
  "properties": {
    "reasoning": {
      "type": "string",
      "description": "Think through evaluation before verdict"
    },
    "behaviors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "found", "quote"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Expected behavior from test case"
          },
          "found": {
            "type": "boolean",
            "description": "Whether this behavior was found in output"
          },
          "quote": {
            "type": "string",
            "description": "Exact quote from output or NOT FOUND"
          }
        }
      }
    },
    "verdict": {
      "type": "string",
      "enum": ["PASS", "PARTIAL", "FAIL"],
      "description": "PASS=all behaviors have quotes, PARTIAL=some, FAIL=none"
    }
  }
}
